{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@providers/*": [
        "./providers/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@atoms/*": [
        "./UI/atoms/*"
      ],
      "@molecules/*": [
        "./UI/molecules/*"
      ],
      "@organisms/*": [
        "./UI/organisms/*"
      ],
      "@templates/*": [
        "./UI/templates/*"
      ],
      "@pages/*": [
        "./UI/pages/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}